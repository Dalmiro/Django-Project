<script>

    $("#send").click(function comentario(){
        var data={
            csrfmiddlewaretoken: '{{ csrf_token }}',
            autor:$("#nombre").val(),
            mensaje:$("#comentario").val(),
            mail:$("#mail").val(),
            id:'{{post.id}}',
        }
        $.ajax({
            method: "POST",
            url: "{% url 'blog_app:mensaje' %}",
            data: data,
            success:function(result){
		$("#mensajes").html(result);
                	$("#nombre").val("");
		$("#mail").val("");
                	$("#comentario").val("");
            },
            error: function(e){
                console.log(e.responseText);
            },
        });

    });
</script>

